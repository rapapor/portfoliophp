{% extends "base.html.twig" %}


{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                News
            </h1>
        </div>
        {% for news in news %}
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4><i class="glyphicon glyphicon-pencil"></i>{{ news.title }} {% if news.date %}{{ news.date|date('Y-m-d H:i:s') }}{% endif %}</h4>
            </div>
            <div class="panel-body">

                <table>
                    <tbody>

                        <tr>

                            <td>{{ news.tekst }}</td>


                        </tr>

                    </tbody>
                    </table>


                </div>
            </div>
        </div>
        {% endfor %}

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <a href="{{ path('admin_news_new')}}" class="btn btn-default">Dodaj</a>
    {% endif %}
    </div>


{% endblock content %}